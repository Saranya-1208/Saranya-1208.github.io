{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "UK Gross Capital Formation (% Change)",
  "width": 500,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/Saranya-1208/Saranya-1208.github.io/refs/heads/main/Gross%20Capital%20Formation.csv"
  },
  "mark": {"type": "line", "point": true, "strokeWidth": 2},
  "encoding": {
    "x": {
      "field": "Date",
      "type": "temporal",
      "title": "Year",
      "axis": {"labelAngle": -45, "format": "%Y"}
    },
    "y": {
      "field": "Value",
      "type": "quantitative",
      "title": "% Change",
      "scale": {"zero": false}
    },
    "color": {"value": "#e74c3c"},
    "tooltip": [
      {"field": "Date", "type": "temporal", "title": "Date", "format": "%Y-%m"},
      {
        "field": "Value",
        "type": "quantitative",
        "title": "% Change",
        "format": ".2f"
      }
    ]
  },
  "config": {}
}